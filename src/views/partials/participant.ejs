<% if (!Array.isArray(participants)) {
    participants = [participants];
} %>
<% if (participants && participants.length > 0 && participants[0]) { %>
    <div>
        <h4><%= name; %></h4>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Actor</th>
                <th scope="col">Status</th>
                <th scope="col">Text</th>
                <th scope="col">Code System</th>
                <th scope="col">Code</th>
            </tr>
            </thead>
            <tbody>
            <% participants.forEach(function(participant){ %>
                <% if (participant && participant.type) { %>
                    <% participant.type.forEach(function(type){ %>
                        <% if (type.coding) { %>
                            <% type.coding.forEach(function(coding){ %>
                                <tr>
                                    <td>
                                        <a href="/4_0_0/<%= participant.actor.reference; %>?_keepOldUI=1"><%= participant.actor.reference; %></a>
                                    </td>
                                    <td><%= participant.status; %></td>
                                    <td><%= participant.type.text; %></td>
                                    <td><%= coding.system; %></td>
                                    <td><%= coding.code; %></td>
                                </tr>
                            <% }); %>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td>
                            <a href="/4_0_0/<%= participant.actor.reference; %>?_keepOldUI=1"><%= participant.actor.reference; %></a>
                        </td>
                        <td><%= participant.status %></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                <% } %>
            <% }); %>
            </tbody>
        </table>
    </div>
<% } %>
