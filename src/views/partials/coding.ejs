<% if (!Array.isArray(codings)) {
    codings = [codings];
} %>
<% if (codings && codings.length > 0 && codings[0]) { %>
    <div>
        <h4><%= name %></h4>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">System</th>
                <th scope="col">Code</th>
                <th scope="col">Display</th>
            </tr>
            </thead>
            <tbody>
            <% codings.forEach(function(coding){ %>
                <% if (coding) { %>
                    <tr>
                        <% if (searchParameter) { %>
                            <td>
                                <a href="/4_0_0/<%= resourceType %>?<%= searchParameter %>=<%= coding.system %>|&_keepOldUI=1"><%= coding.system %></a>
                            </td>
                            <td>
                                <a href="/4_0_0/<%= resourceType %>?<%= searchParameter %>=<%= coding.system %>|<%= coding.code %>&_keepOldUI=1"><%= coding.code %></a>
                            </td>
                        <% } else { %>
                            <td><%= coding.system %></td>
                            <td><%= coding.code %></td>
                        <% } %>
                        <td><%= coding.display %></td>
                    </tr>
                <% } %>
            <% }) %>
            </tbody>
        </table>
    </div>
<% } %>
