<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container-fluid p-0">
        <%- include('../partials/header', {resources: resources}); %>

        <main>
            <% resources.forEach(function(fullResource, index){ const res = fullResource.resource || fullResource; %>
            <div class="resource-item">
                <!-- prettier-ignore -->
                <%- include('../partials/resourceHeader', {res: res}); %>
                <%- include('../partials/nameValue', {value: res.name, name: "Name"}); %>
                <%- include('../partials/uri', {value: res.address, name: "URL"}); %>
                <%- include('../partials/code', {value: res.status, name: "Status"}); %>
                <!-- prettier-ignore -->
                <%- include('../partials/reference', {references: res.managingOrganization, name: "Managing Organization"}); %>
                <!-- prettier-ignore -->
                <%- include('../partials/coding', {resourceType: res.resourceType, codings: res.connectionType, name: "Connection Type", searchParameter: 'type'}); %>
                <%- include('../partials/codeableConcept', {resourceType: res.resourceType, codeableConcepts: res.payloadType, name: "Payload", searchParameter: ''}); %>
                <%- include('../partials/json', {res: fullResource, index: index}); %>
            </div>
            <% }) %>
        </main>

        <%- include('../partials/footer', {url: url, meta: meta}); %>
    </body>
</html>
