{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": "./",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "files": [
    "global.d.ts",
    "src/types/jest/index.d.ts"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
